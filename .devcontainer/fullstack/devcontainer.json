// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.194.0/containers/javascript-node-postgres
// Update the VARIANT arg in docker-compose.yml to pick a Node.js version: 10, 12, 14
{
  "name": "Core",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/core",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "nrwl.angular-console",
        "eamodio.gitlens",
        "graphql.vscode-graphql",
        "esbenp.prettier-vscode",
        "prisma.prisma",
        "firsttris.vscode-jest-runner",
        "redhat.vscode-yaml"
      ]
    }
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // 9747 is the port for the NX MCP server
  "forwardPorts": [9747],

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "/workspaces/core/.devcontainer/fullstack/post-create-command.sh",
  "postStartCommand": "/workspaces/core/.devcontainer/post-start-command.sh",

  // Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
  "remoteUser": "node",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/python:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "nodeGypDependencies": true,
      "version": "lts"
    }
  }
}
