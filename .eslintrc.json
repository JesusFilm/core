{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx", "import"],
  "rules": {
    // "import/no-unresolved": "warn", //error when importing from @core
    // "import/no-internal-modules": "warn", //error when importing from generated
    // "import/no-relative-parent-imports": "warn", //error when importing from generated
    // "import/no-named-export": "warn", //error when exporting on same line as declaration
    // "import/no-default-export": "warn", //problem for storybook
    // "import/group-exports": "warn", //error when multiple exports in file
    // "import/prefer-default-export": "warn", //error when if only 1 export and not default
    "import/no-absolute-path": "error",
    "import/named": "error",
    "import/default": "error",
    "import/namespace": "error",
    "import/no-restricted-paths": "error",
    "import/no-dynamic-require": "error",
    "import/no-webpack-loader-syntax": "error",
    "import/no-self-import": "error",
    "import/no-cycle": "error",
    "import/no-useless-path-segments": "error",
    "import/no-relative-packages": "error",
    "import/export": "error",
    "import/no-named-as-default": "error",
    "import/no-named-as-default-member": "error",
    "import/no-deprecated": "error",
    "import/no-extraneous-dependencies": "error",
    "import/no-mutable-exports": "error",
    "import/no-unused-modules": "error",
    // "import/unambiguous": "error", //error for export on jest.config.js
    // "import/no-commonjs": "error", //error for export on jest.config.js
    "import/no-amd": "error",
    // "import/no-nodejs-modules": "error", //error when importing from certain node modules
    "import/no-import-module-exports": "error",
    "import/first": "error",
    "import/exports-last": "error",
    "import/no-duplicates": "error",
    "import/no-namespace": "error",
    "import/extensions": "error",
    "import/order": "error",
    "import/newline-after-import": "error",
    // "import/max-dependencies": "error", //some index files have more than 10
    // "import/no-unassigned-import": "error", //causes problems with reflect-metadata
    "import/no-named-default": "error",
    "import/no-anonymous-default-export": "error",
    "import/dynamic-import-chunkname": "error"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [
        "plugin:@nrwl/nx/typescript",
        "standard-with-typescript",
        "prettier"
      ],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript", "standard", "prettier"],
      "rules": {}
    }
  ]
}
