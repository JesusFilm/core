{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": [
      "jest",
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts"
    ],
    "emitDecoratorMetadata": true,
    "target": "es2021"
  },
  "exclude": [
    "**/*.spec.{ts,tsx}",
    "jest.config.ts",
    "**/__mocks/*.ts",
    "**/test/*.ts"
  ],
  "include": ["**/*.ts"]
}
