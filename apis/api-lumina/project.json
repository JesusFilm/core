{
  "name": "api-lumina",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apis/api-lumina/src",
  "projectType": "application",
  "tags": ["scope:api"],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "outputPath": "dist/apis/api-lumina",
        "main": "apis/api-lumina/src/index.ts",
        "tsConfig": "apis/api-lumina/tsconfig.app.json",
        "compiler": "tsc",
        "target": "node",
        "webpackConfig": "apis/api-lumina/webpack.config.js"
      },
      "configurations": {
        "production": {
          "generatePackageJson": true,
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx _serve api-lumina | pnpm exec pino-pretty --config .pino-prettyrc.js"
      }
    },
    "_serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "api-lumina:build",
        "inspect": false
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "cache": true,
        "cacheLocation": ".cache/api-lumina/eslint",
        "cacheStrategy": "content"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apis/api-lumina"],
      "options": {
        "jestConfig": "apis/api-lumina/jest.config.ts"
      }
    },
    "generate-graphql": {
      "executor": "nx:run-commands",
      "options": {
        "command": "GENERATE_SCHEMA=true pnpm exec ts-node -P apis/api-lumina/tsconfig.app.json -r tsconfig-paths/register apis/api-lumina/src/schema/index.ts"
      }
    },
    "subgraph-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec hive schema:check apis/api-lumina/schema.graphql --registry.accessToken $HIVE_TOKEN --github --service api-lumina"
      }
    },
    "fetch-secrets": {
      "executor": "nx:run-commands",
      "options": {
        "command": "DOPPLER_TOKEN=$DOPPLER_API_LUMINA_TOKEN doppler secrets download --no-file --format=env-no-quotes --project api-lumina > apis/api-lumina/.env"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm exec tsc --noEmit -p apis/api-lumina/tsconfig.json"]
      }
    }
  }
}
