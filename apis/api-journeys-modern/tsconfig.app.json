{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts"
    ],
    "target": "es2021"
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "jest.config.ts",
    "test/**/*.ts"
  ],
  "include": ["**/*.ts", "**/*.tsx"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node"
    }
  }
}
