{
  "name": "resources",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/resources",
  "projectType": "application",
  "tags": ["doppler_config:stg_dev"],
  "implicitDependencies": ["locales"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cp -r libs/locales apps/resources/public",
          "nx _build resources"
        ],
        "parallel": false
      },
      "configurations": {
        "production": {
          "commands": [
            "cp -r libs/locales apps/resources/public",
            "CI=true nx _build resources --prod"
          ]
        }
      }
    },
    "_build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/resources"
      },
      "configurations": {
        "production": {}
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "VERCEL_PROJECT_ID=$RESOURCES_VERCEL_PROJECT_ID pnpm exec vercel pull --environment=preview --token=$VERCEL_TOKEN",
          "echo \"VERCEL_ENV=\\\"$NEXT_PUBLIC_VERCEL_ENV\\\"\" >> .vercel/.env.preview.local",
          "echo \"VERCEL_GIT_COMMIT_SHA=\\\"$NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA\\\"\" >> .vercel/.env.preview.local",
          "pnpm exec vercel build",
          "VERCEL_PROJECT_ID=$RESOURCES_VERCEL_PROJECT_ID pnpm exec vercel deploy --prebuilt --token=$VERCEL_TOKEN --archive=tgz > apps/resources/.vercel-url"
        ],
        "parallel": false
      },
      "configurations": {
        "production": {
          "commands": [
            "VERCEL_PROJECT_ID=$RESOURCES_VERCEL_PROJECT_ID pnpm exec vercel pull --environment=production --token=$VERCEL_TOKEN",
            "echo \"VERCEL_ENV=\\\"$NEXT_PUBLIC_VERCEL_ENV\\\"\" >> .vercel/.env.production.local",
            "echo \"VERCEL_GIT_COMMIT_SHA=\\\"$NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA\\\"\" >> .vercel/.env.production.local",
            "pnpm exec vercel build --prod",
            "VERCEL_PROJECT_ID=$RESOURCES_VERCEL_PROJECT_ID pnpm exec vercel deploy --prebuilt --prod --token=$VERCEL_TOKEN --archive=tgz > apps/resources/.vercel-url"
          ]
        }
      }
    },
    "upload-sourcemaps": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm dlx @datadog/datadog-ci@3.20.0 sourcemaps upload dist/apps/resources/.next/static --service=resources --release-version=$GIT_COMMIT_SHA --minified-path-prefix=/_next/static/"
        ],
        "parallel": false
      }
    },
    "vercel-alias": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm exec vercel alias set $(cat apps/resources/.vercel-url) resources-$PR_NUMBER-jesusfilm.vercel.app --token=$VERCEL_TOKEN --scope=jesusfilm",
          "echo \"https://resources-$PR_NUMBER-jesusfilm.vercel.app\" > apps/resources/.vercel-url"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "resources:_build",
        "dev": true,
        "hostname": "0.0.0.0",
        "port": 4310
      },
      "configurations": {
        "production": {
          "buildTarget": "resources:_build:production",
          "dev": false
        },
        "development": {
          "buildTarget": "resources:_build:development",
          "dev": true
        }
      },
      "defaultConfiguration": "development"
    },
    "serve-all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "nf start"
          },
          {
            "command": "nx serve resources"
          }
        ],
        "parallel": true
      }
    },
    "generate-test-data": {
      "executor": "nx:run-commands",
      "options": {
        "command": "NEXT_PUBLIC_GATEWAY_URL=http://127.0.0.1:4000 pnpm exec ts-node apps/resources/src/components/Videos/testData.generator.ts"
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "resources:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/resources"],
      "options": {
        "jestConfig": "apps/resources/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "cache": true,
        "cacheLocation": ".cache/resources/eslint",
        "cacheStrategy": "content"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsc -b apps/resources/tsconfig.json"
      }
    },
    "demo": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": ".storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "codegen": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "rm -rf node_modules/apollo-language-server/node_modules/graphql"
          },
          {
            "command": "rm -rf apps/resources/__generated__"
          },
          {
            "command": "npx apollo client:codegen --config apps/resources/apollo.config.js --target typescript --outputFlat apps/resources/__generated__"
          }
        ]
      }
    },
    "fetch-secrets": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "DOPPLER_TOKEN=$DOPPLER_RESOURCES_TOKEN doppler secrets download --no-file --format=env-no-quotes --project resources > apps/resources/.env"
          }
        ]
      }
    },
    "extract-translations": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm exec i18next --config apps/resources/i18next-parser.config.js"
          }
        ]
      }
    },
    "codecov": {
      "executor": "nx:run-commands",
      "options": {
        "command": "codecov -f coverage/apps/resources/cobertura-coverage.xml -F apps.resources"
      }
    }
  }
}
