{
  "name": "journeys",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/journeys",
  "projectType": "application",
  "tags": ["doppler_config:stg_dev"],
  "implicitDependencies": ["locales"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cp -r libs/locales apps/journeys/public",
          "nx _build journeys"
        ],
        "parallel": false
      },
      "configurations": {
        "production": {
          "commands": [
            "cp -r libs/locales apps/journeys/public",
            "CI=true nx _build journeys --prod"
          ]
        }
      }
    },
    "_build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/journeys"
      },
      "configurations": {
        "production": {}
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "VERCEL_PROJECT_ID=$JOURNEYS_VERCEL_PROJECT_ID pnpm dlx vercel pull --environment=preview --token=$VERCEL_TOKEN",
          "echo \"VERCEL_ENV=\\\"$NEXT_PUBLIC_VERCEL_ENV\\\"\" >> .vercel/.env.preview.local",
          "echo \"VERCEL_GIT_COMMIT_SHA=\\\"$NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA\\\"\" >> .vercel/.env.preview.local",
          "pnpm dlx vercel build",
          "VERCEL_PROJECT_ID=$JOURNEYS_VERCEL_PROJECT_ID pnpm dlx vercel deploy --prebuilt --token=$VERCEL_TOKEN --archive=tgz > apps/journeys/.vercel-url"
        ],
        "parallel": false
      },
      "configurations": {
        "production": {
          "commands": [
            "VERCEL_PROJECT_ID=$JOURNEYS_VERCEL_PROJECT_ID pnpm dlx vercel pull --environment=production --token=$VERCEL_TOKEN",
            "echo \"VERCEL_ENV=\\\"$NEXT_PUBLIC_VERCEL_ENV\\\"\" >> .vercel/.env.production.local",
            "echo \"VERCEL_GIT_COMMIT_SHA=\\\"$NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA\\\"\" >> .vercel/.env.production.local",
            "pnpm dlx vercel build --prod",
            "VERCEL_PROJECT_ID=$JOURNEYS_VERCEL_PROJECT_ID pnpm dlx vercel deploy --prebuilt --prod --token=$VERCEL_TOKEN --archive=tgz > apps/journeys/.vercel-url"
          ]
        }
      }
    },
    "upload-sourcemaps": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm dlx @datadog/datadog-ci sourcemaps upload dist/apps/journeys/.next/static --service=journeys --release-version=$GIT_COMMIT_SHA --minified-path-prefix=/_next/static/"
        ],
        "parallel": false
      }
    },
    "vercel-alias": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm dlx vercel alias set $(cat apps/journeys/.vercel-url) journeys-$PR_NUMBER-jesusfilm.vercel.app --token=$VERCEL_TOKEN --scope=jesusfilm",
          "echo \"https://journeys-$PR_NUMBER-jesusfilm.vercel.app\" > apps/journeys/.vercel-url"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "journeys:_build",
        "hostname": "0.0.0.0",
        "port": 4100,
        "defaultConfiguration": "development"
      },
      "configurations": {
        "production": {
          "buildTarget": "journeys:_build:production",
          "dev": false
        },
        "development": {
          "buildTarget": "journeys:_build:development",
          "dev": true
        }
      },
      "defaultConfiguration": "development"
    },
    "serve-all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "nf start"
          },
          {
            "command": "nx serve journeys"
          }
        ],
        "parallel": true
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "journeys:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/journeys"],
      "options": {
        "jestConfig": "apps/journeys/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "cache": true,
        "cacheLocation": ".cache/journeys/eslint",
        "cacheStrategy": "content"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsc -b apps/journeys/tsconfig.json"
      }
    },
    "demo": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": ".storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "codegen": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "rm -rf node_modules/apollo-language-server/node_modules/graphql"
          },
          {
            "command": "rm -rf apps/journeys/__generated__"
          },
          {
            "command": "pnpm dlx apollo client:codegen --config apps/journeys/apollo.config.js --target typescript --outputFlat apps/journeys/__generated__"
          }
        ]
      }
    },
    "fetch-secrets": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "DOPPLER_TOKEN=$DOPPLER_JOURNEYS_TOKEN doppler secrets download --no-file --format=env-no-quotes --project journeys > apps/journeys/.env"
          }
        ]
      }
    },
    "extract-translations": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm dlx i18next --config apps/journeys/i18next-parser.config.js"
          }
        ]
      }
    },
    "codecov": {
      "executor": "nx:run-commands",
      "options": {
        "command": "codecov -f coverage/apps/journeys/cobertura-coverage.xml -F apps.journeys"
      }
    }
  }
}
