{
  "name": "arclight",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/arclight",
  "projectType": "application",
  "tags": ["doppler_config:stg_dev"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cp -r libs/locales apps/arclight/public",
          "nx _build arclight",
          "cp apps/arclight/next-logger.config.js dist/apps/arclight/next-logger.config.js"
        ],
        "parallel": false
      },
      "configurations": {
        "production": {
          "commands": [
            "cp -r libs/locales apps/arclight/public",
            "CI=true nx _build arclight --prod",
            "cp apps/arclight/next-logger.config.js dist/apps/arclight/next-logger.config.js"
          ]
        }
      }
    },
    "_build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/arclight"
      },
      "configurations": {
        "production": {}
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "VERCEL_PROJECT_ID=$ARCLIGHT_VERCEL_PROJECT_ID pnpm dlx vercel pull --environment=preview --token=$VERCEL_TOKEN",
          "echo \"VERCEL_ENV=\\\"$NEXT_PUBLIC_VERCEL_ENV\\\"\" >> .vercel/.env.preview.local",
          "echo \"VERCEL_GIT_COMMIT_SHA=\\\"$NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA\\\"\" >> .vercel/.env.preview.local",
          "pnpm dlx vercel build",
          "VERCEL_PROJECT_ID=$ARCLIGHT_VERCEL_PROJECT_ID pnpm dlx vercel deploy --prebuilt --token=$VERCEL_TOKEN --archive=tgz > apps/arclight/.vercel-url"
        ],
        "parallel": false
      },
      "configurations": {
        "production": {
          "commands": [
            "VERCEL_PROJECT_ID=$ARCLIGHT_VERCEL_PROJECT_ID pnpm dlx vercel pull --environment=production --token=$VERCEL_TOKEN",
            "echo \"VERCEL_ENV=\\\"$NEXT_PUBLIC_VERCEL_ENV\\\"\" >> .vercel/.env.production.local",
            "echo \"VERCEL_GIT_COMMIT_SHA=\\\"$NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA\\\"\" >> .vercel/.env.production.local",
            "pnpm dlx vercel build --prod",
            "VERCEL_PROJECT_ID=$ARCLIGHT_VERCEL_PROJECT_ID pnpm dlx vercel deploy --prebuilt --prod --token=$VERCEL_TOKEN --archive=tgz > apps/arclight/.vercel-url"
          ]
        }
      }
    },
    "upload-sourcemaps": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm dlx @datadog/datadog-ci sourcemaps upload dist/apps/arclight/.next/static --service=arclight --release-version=$GIT_COMMIT_SHA --minified-path-prefix=/_next/static/"
        ],
        "parallel": false
      }
    },
    "vercel-alias": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm dlx vercel alias set $(cat apps/arclight/.vercel-url) arclight-$PR_NUMBER-jesusfilm.vercel.app --token=$VERCEL_TOKEN --scope=jesusfilm",
          "echo \"https://arclight-$PR_NUMBER-jesusfilm.vercel.app\" > apps/arclight/.vercel-url"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "arclight:_build",
        "dev": true,
        "port": 4600
      },
      "configurations": {
        "development": {
          "buildTarget": "arclight:_build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "arclight:_build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "arclight:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/arclight/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "cache": true,
        "cacheLocation": ".cache/arclight/eslint",
        "cacheStrategy": "content"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsc -b apps/arclight/tsconfig.json"
      }
    },
    "fetch-secrets": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "DOPPLER_TOKEN=$DOPPLER_ARCLIGHT_TOKEN doppler secrets download --no-file --format=env-no-quotes --project arclight > apps/arclight/.env"
          }
        ]
      }
    },
    "extract-translations": {
      "executor": "nx:run-commands",
      "options": {
        "commands": []
      }
    }
  }
}
