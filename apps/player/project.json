{
  "name": "player",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/player",
  "projectType": "application",
  "tags": ["doppler_config:stg_dev"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cp -r libs/locales apps/player/public",
          "nx _build player"
        ],
        "parallel": false
      },
      "configurations": {
        "production": {
          "commands": [
            "cp -r libs/locales apps/player/public",
            "CI=true nx _build player --prod"
          ]
        }
      }
    },
    "_build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/player"
      },
      "configurations": {
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "player:_build",
        "dev": true,
        "port": 4700
      },
      "configurations": {
        "development": {
          "buildTarget": "player:_build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "player:_build:production",
          "dev": false
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/player/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "cache": true,
        "cacheLocation": ".cache/player/eslint",
        "cacheStrategy": "content"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsc -b apps/player/tsconfig.json"
      }
    }
  }
}
