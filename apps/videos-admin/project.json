{
  "name": "videos-admin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/videos-admin",
  "projectType": "application",
  "tags": [],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/videos-admin/jest.config.ts"
      }
    },
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/videos-admin"
      },
      "configurations": {
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "videos-admin:build",
        "dev": true,
        "port": 4700
      },
      "configurations": {
        "development": {
          "buildTarget": "videos-admin:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "videos-admin:build:production",
          "dev": false
        }
      }
    },
    "fetch-secrets": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "DOPPLER_TOKEN=$DOPPLER_GITHUB_SERVICE_TOKEN doppler secrets download --no-file --format=env --project  videos-admin > apps/videos-admin/.env"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "cache": true,
        "cacheLocation": ".cache/videos-admin/eslint",
        "cacheStrategy": "content"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsc -b apps/videos-admin/tsconfig.json"
      }
    },
    "codegen": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "rm -rf node_modules/apollo-language-server/node_modules/graphql"
          },
          {
            "command": "rm -rf apps/videos-admin/__generated__"
          },
          {
            "command": "npx apollo client:codegen --config apps/videos-admin/apollo.config.js --target typescript --outputFlat apps/videos-admin/__generated__"
          }
        ]
      }
    }
  }
}
