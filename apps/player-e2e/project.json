{
  "name": "player-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/player-e2e/src",
  "projectType": "application",
  "tags": [],
  "implicitDependencies": ["player"],
  "targets": {
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["playwright test"],
        "cwd": "apps/player-e2e"
      }
    },
    "update-snapshots": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["playwright test --update-snapshots"],
        "cwd": "apps/player-e2e"
      }
    },
    "debug": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "PWDEBUG=1 xvfb-run playwright test --project=chromium --timeout=0"
        ],
        "cwd": "apps/player-e2e"
      }
    },
    "show-report": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["playwright show-report"],
        "cwd": "apps/player-e2e"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsc -b apps/player-e2e/tsconfig.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "cache": true,
        "cacheLocation": ".cache/player-e2e/eslint",
        "cacheStrategy": "content"
      }
    }
  }
}
