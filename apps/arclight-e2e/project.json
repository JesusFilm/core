{
  "name": "arclight-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/arclight-e2e/src",
  "projectType": "application",
  "tags": [],
  "implicitDependencies": ["arclight"],
  "targets": {
    "e2e": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": [
        "default",
        "^default",
        { "env": "DEPLOYMENT_URL" },
        { "env": "ARCLIGHT_DAILY_E2E" }
      ],
      "outputs": [
        "{projectRoot}/playwright-report",
        "{projectRoot}/test-results"
      ],
      "options": {
        "commands": ["playwright test"],
        "cwd": "apps/arclight-e2e"
      }
    },
    "update-snapshots": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["playwright test --update-snapshots"],
        "cwd": "apps/arclight-e2e"
      }
    },
    "debug": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "PWDEBUG=1 xvfb-run playwright test --project=chromium --timeout=0"
        ],
        "cwd": "apps/arclight-e2e"
      }
    },
    "show-report": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["playwright show-report"],
        "cwd": "apps/arclight-e2e"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsc -b apps/arclight-e2e/tsconfig.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "cache": true,
        "cacheLocation": ".cache/arclight-e2e/eslint",
        "cacheStrategy": "content"
      }
    }
  }
}
