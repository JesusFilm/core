{
  "name": "docs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/docs/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docusaurus build --out-dir ../../dist/apps/docs",
        "cwd": "apps/docs"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "VERCEL_PROJECT_ID=$DOCS_VERCEL_PROJECT_ID bun run vercel pull --environment=preview --token=$VERCEL_TOKEN",
          "echo \"VERCEL_ENV=\\\"$NEXT_PUBLIC_VERCEL_ENV\\\"\" >> .vercel/.env.preview.local",
          "echo \"VERCEL_GIT_COMMIT_SHA=\\\"$NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA\\\"\" >> .vercel/.env.preview.local",
          "bun run vercel build",
          "VERCEL_PROJECT_ID=$DOCS_VERCEL_PROJECT_ID bun run vercel deploy --prebuilt --token=$VERCEL_TOKEN --archive=tgz > apps/docs/.vercel-url"
        ],
        "parallel": false
      },
      "configurations": {
        "production": {
          "commands": [
            "VERCEL_PROJECT_ID=$DOCS_VERCEL_PROJECT_ID bun run vercel pull --environment=production --token=$VERCEL_TOKEN",
            "echo \"VERCEL_ENV=\\\"$NEXT_PUBLIC_VERCEL_ENV\\\"\" >> .vercel/.env.production.local",
            "echo \"VERCEL_GIT_COMMIT_SHA=\\\"$NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA\\\"\" >> .vercel/.env.production.local",
            "bun run vercel build --prod",
            "VERCEL_PROJECT_ID=$DOCS_VERCEL_PROJECT_ID bun run vercel deploy --prebuilt --prod --token=$VERCEL_TOKEN --archive=tgz > apps/docs/.vercel-url"
          ]
        }
      }
    },
    "vercel-alias": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "bun run vercel alias set $(cat apps/docs/.vercel-url) docs-$PR_NUMBER-jesusfilm.vercel.app --token=$VERCEL_TOKEN --scope=jesusfilm",
          "echo \"https://docs-$PR_NUMBER-jesusfilm.vercel.app\" > apps/docs/.vercel-url"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docusaurus start --port 3000",
        "cwd": "apps/docs"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "cache": true,
        "cacheLocation": ".cache/docs/eslint",
        "cacheStrategy": "content"
      }
    },
    "fetch-secrets": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "DOPPLER_TOKEN=$DOPPLER_DOCS_TOKEN doppler secrets download --no-file --format=env --project docs > apps/docs/.env"
          }
        ]
      }
    },
    "extract-translations": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "bun run i18next --config apps/docs/i18next-parser.config.js"
          }
        ]
      }
    }
  }
}
