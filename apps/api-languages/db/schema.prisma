generator client {
  provider = "prisma-client-js"
  output   = env("PRISMA_LOCATION")
}

datasource db {
  provider = "postgresql"
  url      = env("PG_DATABASE_URL")
}

model Country {
  id         String      @id
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  name       Json[]
  population Int
  slug       String      @unique
  latitude   Float
  longitude  Float
  image      String
  continents Continent[]
  languages  Language[]
}

model Language {
  id         String      @id
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  name       Json[]
  bcp47      String?
  iso3       String?
  countries  Country[]
  continents Continent[]
}

model Continent {
  id         String    @id @default(uuid())
  value      String
  languageId String
  countries  Country[]
  primary    Boolean   @default(false)
  language   Language  @relation(fields: [languageId], references: [id])

  @@unique([value, languageId])
}
