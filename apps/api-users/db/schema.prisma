// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = env("PRISMA_LOCATION_USERS")
}

datasource db {
  provider = "postgresql"
  url      = env("PG_DATABASE_URL_USERS")
}

model User {
  id                 String            @id @default(uuid())
  userId             String            @unique
  firstName          String
  lastName           String?
  email              String            @unique
  imageUrl           String?
  createdAt          DateTime          @default(now())
  superAdmin         Boolean           @default(false)
  emailVerified      Boolean           @default(true)
  EmailPreferences   EmailPreferences? @relation(fields: [emailPreferencesId], references: [id])
  emailPreferencesId String?
}

model EmailPreferences {
  id                   String  @id @default(uuid())
  userEmail            String
  teamInvites          Boolean @default(true)
  journeyNotifications Boolean @default(true)
  thirdCategory        Boolean @default(true)
  User                 User[]
}
