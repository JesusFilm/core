generator client {
  provider = "prisma-client-js"
  output   = env("PRISMA_LOCATION_TAGS")
}

datasource db {
  provider = "postgresql"
  url      = env("PG_DATABASE_URL_TAGS")
}

enum Service {
  apiJourneys
  apiLanguages
  apiMedia
  apiTags
  apiUsers
  apiVideos
}

model Tag {
  id               String    @id @default(uuid())
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  name             String    @unique
  nameTranslations Json[]
  Tagging          Tagging[]
  parent           Tag?      @relation("ParentChildren", fields: [parentId], references: [id], onDelete: Cascade)
  parentId         String?
  children         Tag[]     @relation("ParentChildren")
  service          Service?
}

model Tagging {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  tag          Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId        String
  taggableType String
  taggableId   String
  context      String

  @@unique([taggableId, taggableType, tagId, context])
  @@index([tagId])
}
