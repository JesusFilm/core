// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/api-journeys-client"
}

model Journey {
  id           String  @id @default(uuid())
  title        String
  published    Boolean @default(false)
  blocks       Block[]
  userSessions UserSession[]
}

model Block {
  id             String    @id @default(uuid())
  blockType      BlockType @default(StepBlock)
  journey        Journey   @relation(fields: [journeyId], references: [id])
  journeyId      String
  parentBlock    Block?    @relation("BlockChildren", fields: [parentBlockId], references: [id])
  parentBlockId  String?
  childBlocks    Block[]   @relation("BlockChildren")
  extraAttrs     Json?
  parentOrder    Int       @default(0)
  blockResponses BlockResponse[]
}

enum BlockType {
  StepBlock
  VideoBlock
  RadioQuestionBlock
  RadioOptionBlock
}

model UserSession {
  id             String  @id @default(uuid())
  journey        Journey @relation(fields: [journeyId], references: [id])
  journeyId      String
  blockResponses BlockResponse[]
}

model BlockResponse {
  id            String      @id @default(uuid())
  userSession   UserSession @relation(fields: [userSessionId], references: [id])
  userSessionId String
  block         Block       @relation(fields: [blockId], references: [id])
  blockId       String
  responseData  Json
}
