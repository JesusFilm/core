{
  "extends": [
    "plugin:@nx/react-typescript",
    "../../../.eslintrc.json",
    "next",
    "next/core-web-vitals"
  ],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["libs/shared/ui-dynamic/tsconfig.*?.json"]
      },
      "rules": {
        "no-void": [
          "error",
          {
            "allowAsStatement": true
          }
        ],
        "@typescript-eslint/no-misused-promises": "off"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.tsx", "*.jsx"],
      "rules": {}
    }
  ]
}
