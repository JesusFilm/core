{
  "name": "prisma-analytics",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/prisma/analytics/src",
  "projectType": "library",
  "tags": ["type:prisma", "scope:analytics"],
  "targets": {
    "fetch-secrets": {
      "executor": "nx:run-commands",
      "options": {
        "command": "DOPPLER_TOKEN=$DOPPLER_API_ANALYTICS_TOKEN doppler secrets download --no-file --format=env-no-quotes --project api-analytics > libs/prisma/analytics/.env"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "cache": true,
        "cacheLocation": ".cache/prisma-analytics/eslint",
        "cacheStrategy": "content"
      }
    },
    "prisma-generate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "pnpm exec prisma generate --schema libs/prisma/analytics/db/schema.prisma"
        ]
      }
    },
    "prisma-introspect": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm exec prisma db pull --schema libs/prisma/analytics/db/schema.prisma"
        ]
      }
    },
    "prisma-studio": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm exec prisma studio --schema libs/prisma/analytics/db/schema.prisma"
        ]
      }
    },
    "prisma-validate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm exec prisma validate --schema libs/prisma/analytics/db/schema.prisma"
        ]
      }
    },
    "prisma-reset": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tools/scripts/env-validator.sh --DOPPLER_CONFIG=dev --PG_DATABASE_URL_ANALYTICS=postgresql://postgres:postgres@db:5432/analytics?schema=public \"pnpm exec prisma migrate reset --schema libs/prisma/analytics/db/schema.prisma --force\""
        ]
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm exec tsc -b libs/prisma/analytics/tsconfig.json"]
      }
    }
  }
}
