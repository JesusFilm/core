{
  "name": "prisma-languages",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/prisma/languages/src",
  "projectType": "library",
  "tags": ["type:prisma", "scope:languages"],
  "targets": {
    "fetch-secrets": {
      "executor": "nx:run-commands",
      "options": {
        "command": "DOPPLER_TOKEN=$DOPPLER_API_LANGUAGES_TOKEN doppler secrets download --no-file --format=env-no-quotes --project api-languages > libs/prisma/languages/.env"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "cache": true,
        "cacheLocation": ".cache/prisma-languages/eslint",
        "cacheStrategy": "content"
      }
    },
    "prisma-generate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "pnpm exec prisma generate --schema libs/prisma/languages/db/schema.prisma"
        ]
      }
    },
    "prisma-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tools/scripts/env-validator.sh --DOPPLER_CONFIG=dev --PG_DATABASE_URL_LANGUAGES=postgresql://postgres:postgres@db:5432/languages?schema=public \"bash -c 'pnpm exec prisma migrate dev --schema libs/prisma/languages/db/schema.prisma --name `date +\\\"%Y%m%d%H%M%S\\\"`'\""
        ]
      },
      "configurations": {
        "production": {
          "commands": [
            "tools/scripts/env-validator.sh --DOPPLER_CONFIG=dev --PG_DATABASE_URL_LANGUAGES=postgresql://postgres:postgres@db:5432/languages?schema=public \"pnpm exec prisma migrate deploy --schema libs/prisma/languages/db/schema.prisma\""
          ]
        }
      }
    },
    "prisma-reset": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tools/scripts/env-validator.sh --DOPPLER_CONFIG=dev --PG_DATABASE_URL_LANGUAGES=postgresql://postgres:postgres@db:5432/languages?schema=public \"pnpm exec prisma migrate reset --schema libs/prisma/languages/db/schema.prisma --force\""
        ]
      }
    },
    "prisma-studio": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm exec prisma studio --schema libs/prisma/languages/db/schema.prisma"
        ]
      }
    },
    "prisma-validate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm exec prisma validate --schema libs/prisma/languages/db/schema.prisma"
        ]
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm exec tsc -b libs/prisma/languages/tsconfig.json"]
      }
    }
  }
}
