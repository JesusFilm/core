{
  "root": "libs/journey/ui",
  "sourceRoot": "libs/journey/ui/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/journey/ui/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "type-check": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npx tsc -b libs/journey/ui/tsconfig.json"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/journey/ui"],
      "options": {
        "jestConfig": "libs/journey/ui/jest.config.js",
        "passWithNoTests": true
      }
    },
    "demo": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/react",
        "port": 4400,
        "config": {
          "configFolder": ".storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "codegen": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "rm -rf node_modules/apollo-language-server/node_modules/graphql"
          },
          {
            "command": "npx apollo client:codegen --config libs/journey/ui/apollo.config.js --target typescript  --globalTypesFile=libs/journey/ui/__generated__/globalTypes.ts"
          }
        ]
      }
    }
  }
}
