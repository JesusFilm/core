{
  "extends": ["plugin:@nrwl/nx/react-typescript",
    "../../.eslintrc.json",],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["libs/journey/ui/tsconfig.*?.json"]
      },
      "rules": {
        "no-void": ["error", { "allowAsStatement": true }]
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
{
      "files": ["*.tsx", "*.jsx"],
      "rules": {
        "react/jsx-indent": ["error", 2]
      }
    },
    {
      "files": ["next-env.d.ts"],
      "rules": {
        "@typescript-eslint/triple-slash-reference": "off"
      }
    }
  ],
  "env": {
    "jest": true
  }
}
