{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@core/apollo/logging": ["libs/apollo/logging/src/index.ts"],
      "@core/journeys/ui": ["libs/journeys/ui/src/index.ts"],
      "@core/nest/database": ["libs/nest/database/src/index.ts"],
      "@core/nest/decorators": ["libs/nest/decorators/src/index.ts"],
      "@core/nest/gqlAuthGuard": ["libs/nest/gqlAuthGuard/src/index.ts"],
      "@core/shared/storybook": ["libs/shared/storybook/src/index.ts"],
      "@core/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@core/shared/util-graphql": ["libs/shared/util-graphql/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
