{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "ignore": [
      "__generated__",
      "schema.graphql",
      ".storybook",
      "package-lock.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "lineEnding": "lf",
    "ignore": [
      "./dist",
      "./coverage",
      "./libs/locales/**/*.json",
      "**/.prettierignore",
      "**/.docusaurus/",
      ".storybook/static/mockServiceWorker.js",
      "./.nx/cache",
      "./.nx/workspace-data"
    ]
  },
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "info",
        "useButtonType": "info",
        "useHeadingContent": "info",
        "useIframeTitle": "info",
        "useKeyWithClickEvents": "off",
        "useMediaCaption": "info"
      },
      "complexity": {
        "noForEach": "off",
        "noUselessFragments": "info",
        "noUselessSwitchCase": "info",
        "useArrowFunction": "info",
        "useFlatMap": "info"
      },
      "correctness": {
        "useExhaustiveDependencies": "info",
        "useJsxKeyInIterable": "info"
      },
      "performance": {
        "noAccumulatingSpread": "warn"
      },
      "suspicious": {
        "noArrayIndexKey": "info",
        "noDuplicateTestHooks": "info",
        "noEmptyBlockStatements": "off",
        "noExplicitAny": "warn",
        "noGlobalIsNan": "warn",
        "noImplicitAnyLet": "off"
      },
      "style": {
        "noImplicitBoolean": "off",
        "noParameterAssign": "off",
        "noUnusedTemplateLiteral": "info",
        "noUselessElse": "info",
        "useDefaultParameterLast": "info",
        "useEnumInitializers": "off",
        "useExponentiationOperator": "info",
        "useNodejsImportProtocol": "info",
        "useNumberNamespace": "info",
        "useSingleVarDeclarator": "off",
        "useTemplate": "info"
      }
    },
    "ignore": [
      "**/node_modules",
      "**/jest.config.ts",
      "**/.next",
      "**/.docusaurus"
    ]
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "none",
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "overrides": [
    {
      "include": [
        "*.spec.ts",
        "*.spec.tsx",
        "*.spec.js",
        "*.spec.jsx",
        "*.stories.ts",
        "*.stories.tsx",
        "*.stories.js",
        "*.stories.jsx"
      ],
      "linter": { "rules": {} }
    },
    {
      "include": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "linter": { "rules": {} }
    },
    {
      "include": ["*.ts", "*.tsx"],
      "linter": {
        "rules": {
          "complexity": { "useOptionalChain": "off" },
          "style": { "useExportType": "off", "useImportType": "off" }
        }
      }
    },
    { "include": ["*.js", "*.jsx"], "linter": { "rules": {} } },
    {
      "include": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "linter": { "rules": { "suspicious": { "noSkippedTests": "off" } } }
    },
    {
      "include": [
        "*.stories.ts",
        "*.stories.tsx",
        "*.stories.js",
        "*.stories.jsx"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noShadowRestrictedNames": "off"
          }
        }
      }
    }
  ],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
